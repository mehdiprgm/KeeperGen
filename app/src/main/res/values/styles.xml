<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="lineHeight">25dp</item>
    </style>

    <style name="TextSmall" parent="BaseText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextNormal" parent="BaseText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBig" parent="BaseText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextExtra" parent="BaseText">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="CardViewShadow">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:outlineAmbientShadowColor">@color/theme</item>
        <item name="android:outlineSpotShadowColor">@color/theme</item>
    </style>

    <style name="ButtonStyle" parent="TextNormal">
        <item name="cornerRadius">5dp</item>
        <item name="backgroundTint">@color/theme</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!--        <item name="android:foreground">"?android:attr/selectableItemBackground"</item>-->

    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:background">@drawable/layout_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="LayoutStyleBorderless">
        <item name="android:background">@drawable/layout_background_borderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>