<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBankCard"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layBankCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/panelBackground"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvCardName"
                style="@style/TextNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_credit_card2"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Card name"
                android:textDirection="ltr"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCardNumberTitle"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:text="Card number"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvCardName"
                app:layout_constraintTop_toBottomOf="@+id/tvCardName" />

            <TextView
                android:id="@+id/tvCardNumber"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="5859831039950828"
                android:textColor="@color/foreground_less"
                app:layout_constraintStart_toStartOf="@+id/tvCardNumberTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvCardNumberTitle" />

            <TextView
                android:id="@+id/tvExpireDateTitle"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:text="Expire date"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvCardNumber"
                app:layout_constraintTop_toBottomOf="@+id/tvCardNumber" />

            <TextView
                android:id="@+id/tvExpireDate"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="25 / 03"
                android:textColor="@color/foreground_less"
                app:layout_constraintStart_toStartOf="@+id/tvExpireDateTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvExpireDateTitle" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chkSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:enabled="false"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>