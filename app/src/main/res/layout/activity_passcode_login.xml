<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/background"
    tools:context=".activity.login.PasscodeLoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMessage"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Enter Passcode"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayPasscode"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage">

            <EditText
                android:id="@+id/txtPasscode"
                style="@style/TextExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layPasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btnDelete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/layRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/btn1"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="1" />

                <TextView
                    android:id="@+id/btn2"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="2" />

                <TextView
                    android:id="@+id/btn3"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="3" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layRow1">

                <TextView
                    android:id="@+id/btn4"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="4" />

                <TextView
                    android:id="@+id/btn5"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="5" />

                <TextView
                    android:id="@+id/btn6"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="6" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layRow2">

                <TextView
                    android:id="@+id/btn7"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="7" />

                <TextView
                    android:id="@+id/btn8"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="8" />

                <TextView
                    android:id="@+id/btn9"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="9" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layRow3">

                <TextView
                    android:id="@+id/btnEmpty"
                    style="@style/TextBig"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/btn0"
                    style="@style/TextBig"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/btnEmpty2"
                    style="@style/TextBig"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnDelete"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:text="DELETE"
            app:layout_constraintBottom_toTopOf="@+id/imgFingerprint"
            app:layout_constraintEnd_toEndOf="@+id/layPasscode" />

        <Button
            android:id="@+id/btnClear"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:text="CLEAR"
            app:layout_constraintBottom_toTopOf="@+id/imgFingerprint"
            app:layout_constraintStart_toStartOf="@+id/layPasscode" />

        <ImageView
            android:id="@+id/imgFingerprint"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_fingerprint"
            app:layout_constraintBottom_toTopOf="@+id/tvForgetPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvForgetPassword"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget your password ?"
            android:textColor="@color/theme"
            app:layout_constraintBottom_toTopOf="@+id/tvUseFingerprint"
            app:layout_constraintEnd_toEndOf="@+id/imgFingerprint"
            app:layout_constraintStart_toStartOf="@+id/imgFingerprint" />

        <TextView
            android:id="@+id/tvUseFingerprint"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Login using fingerprint"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvForgetPassword"
            app:layout_constraintStart_toStartOf="@+id/tvForgetPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>