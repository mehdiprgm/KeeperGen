<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".activity.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_arrow_back"
            android:drawablePadding="10dp"
            android:text="About Us"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAppInformation"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layAppInformation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@color/panelBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Logo"
                    android:src="@drawable/ic_nuclear"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/theme"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvAppName"
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imgLogo"
                    app:layout_constraintTop_toTopOf="@+id/imgLogo" />

                <TextView
                    android:id="@+id/tvAppVersion"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="1.7"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAppName"
                    app:layout_constraintStart_toEndOf="@+id/tvAppName" />

                <TextView
                    android:id="@+id/tvAppCreator"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created by zenDEv - 2025"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvAppName"
                    app:layout_constraintTop_toBottomOf="@+id/tvAppName" />

                <ImageView
                    android:id="@+id/imgClose1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Close"
                    android:src="@drawable/ic_arrow_up"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <View
                    android:id="@+id/viewSep1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="20dp"
                    android:background="@color/foreground_less"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

                <TextView
                    android:id="@+id/tvAppDescription"
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="KeeperGen is your secure digital vault. Safely store and manage all your passwords, bank cards, and personal notes with advanced encryption. Easily generate unique passwords and customize your experience in Settings"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewSep1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFeatures"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardAppInformation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layFeatures"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@color/panelBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvFeatures"
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_rocket"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Features"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgClose2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Close"
                    android:src="@drawable/ic_arrow_up"
                    app:layout_constraintBottom_toBottomOf="@+id/tvFeatures"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvFeatures"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvFeature1"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_dot"
                    android:text="Store information in the device even when you're offline"
                    app:layout_constraintStart_toStartOf="@+id/tvFeatures"
                    app:layout_constraintTop_toBottomOf="@+id/tvFeatures" />

                <TextView
                    android:id="@+id/tvFeature2"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_dot"
                    android:text="Import all your device contacts into the application database with one click"
                    app:layout_constraintStart_toStartOf="@+id/tvFeature1"
                    app:layout_constraintTop_toBottomOf="@+id/tvFeature1" />

                <TextView
                    android:id="@+id/tvFeature3"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_dot"
                    android:text="Generate new passwords and customize strength of the password"
                    app:layout_constraintStart_toStartOf="@+id/tvFeature2"
                    app:layout_constraintTop_toBottomOf="@+id/tvFeature2" />

                <TextView
                    android:id="@+id/tvFeature4"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_dot"
                    android:text="Sync your information with cloud database, so you can access it anywhere you want"
                    app:layout_constraintStart_toStartOf="@+id/tvFeature3"
                    app:layout_constraintTop_toBottomOf="@+id/tvFeature3" />

                <TextView
                    android:id="@+id/tvFeature5"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_dot"
                    android:text="Complete new user interface for better exprience"
                    app:layout_constraintStart_toStartOf="@+id/tvFeature4"
                    app:layout_constraintTop_toBottomOf="@+id/tvFeature4" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFixedBugs"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFeatures">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layFixedBugs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@color/panelBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvFixedBugs"
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_bug"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="Fixed bugs"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgClose3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Close"
                    android:src="@drawable/ic_arrow_up"
                    app:layout_constraintBottom_toBottomOf="@+id/tvFixedBugs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvFixedBugs"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvFixedBug1"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_dot"
                    android:text="Unexpected item selection occurs when multi-select mode is enabled"
                    app:layout_constraintStart_toStartOf="@+id/tvFixedBugs"
                    app:layout_constraintTop_toBottomOf="@+id/tvFixedBugs" />

                <TextView
                    android:id="@+id/tvFixedBug2"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_dot"
                    android:text="Code optimization and performance improvement"
                    app:layout_constraintStart_toStartOf="@+id/tvFixedBug1"
                    app:layout_constraintTop_toBottomOf="@+id/tvFixedBug1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDeveloperInformation"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFixedBugs">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/panelBackground"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mehdi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvName"
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Mehdi Lavasani"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imgProfile"
                    app:layout_constraintStart_toStartOf="@+id/imgProfile"
                    app:layout_constraintTop_toBottomOf="@+id/imgProfile" />

                <TextView
                    android:id="@+id/tvDescription"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:lineHeight="20dp"
                    android:text="Hi my name is mehdi, 25 years old developer and i currently live in Iran, Karaj city.\n\nI love application development and build stuff to help people and teach other engineers how to program"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvName" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription">

                    <ImageView
                        android:id="@+id/imgGmail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_google" />

                    <ImageView
                        android:id="@+id/imgTelegram"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_telegram" />

                    <ImageView
                        android:id="@+id/imgInstagram"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_instagram" />

                    <ImageView
                        android:id="@+id/imgGithub"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_github" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>